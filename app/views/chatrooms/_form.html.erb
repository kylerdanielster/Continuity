<%= form_with(model: chatroom, local: true) do |form| %>
  <% if chatroom.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(chatroom.errors.count, "error") %> prohibited this chatroom from being saved:</h2>

      <ul>
      <% chatroom.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <% if chatroom.persisted? %>
      <div class="float-right">
        <%= link_to 'Destroy', chatroom, method: :delete, class: "text-danger", data: { confirm: 'Are you sure?' } %>
      </div>
    <% end %>

    <%= form.submit class: 'btn btn-primary' %>

    <% if chatroom.persisted? %>
      <%= link_to "Cancel", chatroom, class: "btn btn-link" %>
    <% else %>
      <%= link_to "Cancel", chatrooms_path, class: "btn btn-link" %>
    <% end %>
  </div>
<% end %>
