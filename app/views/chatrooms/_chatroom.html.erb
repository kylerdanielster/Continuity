<h2><%= chatroom.name %></h2>

<div data-behavior="messages" data-chatroom-id="<%= @chatroom.id %>">
  <% chatroom.messages.each do |message| %>
    <%= render message %>
  <% end %>
</div>

<%= form_for [chatroom, Message.new] do |f| %>
  <%= f.text_area :body, rows: 1, class: "form-control" %>
<% end %>