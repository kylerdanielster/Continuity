


<div class="row">
  <div class="col-sm-6">
    <h1>Chatrooms</h1>
  </div>

  <div class="col-sm-6 text-right">
  <%= link_to new_chatroom_path, class: 'btn btn-primary' do %>
    Add New Chatroom
  <% end %>
  </div>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
    
        <th>Name</th>
    

            
      </tr>
    </thead>

    <tbody>
      <% @chatrooms.each do |chatroom| %>
        <%= content_tag :tr, id: dom_id(chatroom), class: dom_class(chatroom) do %>
          
            <td><%= link_to chatroom.name, chatroom %></td>
          

          
          
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>
