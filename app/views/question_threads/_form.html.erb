<%= form_for @question_thread do |f| %>
  <div class="form-group">
    <%= f.text_field :question, placeholder: "Question", class: "form-control" %>
  </div>

   <div class="form-group">
    <%= f.text_area :details, placeholder: "Details", rows: 10, class: "form-control" %>
  </div>

 <div class="form-group">
    <%= f.submit %>
  </div>
<% end %>
