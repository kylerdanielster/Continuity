<%= form_for [@question_thread, answer], html: {class: "answerForm #{toggleDisplay}"},
             data: { target: "inline-edit.form"}, :remote => true  do |f| %>
  <div class="form-group">
    <%= f.text_area :body, placeholder: "Answer", rows: 10, class: "form-control" %>
  </div>

    <div class="form-group">
      <%= f.submit "Update Answer", :class => "btn btn-primary form-control" %>
    </div>
<% end %>
