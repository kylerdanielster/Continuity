<%= form_for [@question_thread, answer], html: {class: "answerForm #{toggleDisplay}"},
             data: { target: "inline-edit.form", action: "blur->inline-edit#hideForm" }, :remote => true  do |f| %>
  <div class="form-group">
    <%= f.text_area :body, data: { behavior: "mentions" }, placeholder: "Answer", rows: 10, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.submit "Update Answer", :class => "btn btn-primary form-control" %>
  </div>

  <%= submit_tag 'Close', type: 'button', class: "btn btn-secondary col", data: { action: "click->inline-edit#hideForm"} %>
<% end %>
