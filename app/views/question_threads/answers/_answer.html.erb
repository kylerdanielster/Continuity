<div id="answers">
    <div class="row" id="answer-<%= answer.id %>">
      <div class="col answer ">
        <div class="userName">Answer By: <%= answer.user.name %></div>
        <p><%= answer.body %></p>

        <% if user_signed_in? and answer.user_id == current_user.id %>
          <%= link_to "Accept Answer",
                      accepted_answers_url(answer_id: answer.id, question_thread_id: answer.question_thread_id),
                      id: "acceptAnswerLink-" + answer.id.to_s, :method => :post %>
        <% end %>

      </div>
    </div>

  <%# @answers.each do |qa| %>
    <%= render partial: "question_threads/comments/comment", locals: {comments: answer.comments} %>
  <%# end %>
    <div class="row" id="addComment-<%= answer.id.to_s %>">
      <div class="col addComment">
        <% if user_signed_in? %>
          <%= link_to "Add comment", new_answer_comment_url(answer.id), remote: true,
                      id: "addCommentLink-" + answer.id.to_s %>
        <% else %>
          <%= link_to "Sign in to add a comment", new_user_session_url %>
        <% end %>
      </div>
    </div>
</div>
