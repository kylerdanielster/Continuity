<%= form_for question_thread, html: {class: "#{toggleDisplay}"}, data: { target: "inline-edit.form"}, :remote => true  do |f| %>
  <div class="form-group">
    <%= f.text_field :question, placeholder: "Question", class: "form-control", data: { action: "blur->inline-edit#hideForm" } %>
  </div>
  <div class="form-group">
    <%= f.submit :class => "btn btn-primary form-control" %>
  </div>
<% end %>