<div class="row">
  <div class="col">
    <h5>Comment</h5>
      <%= form_for [@answer, comment], html: {class: "commentForm"}, :remote => true do |c| %>
        <div class="form-group">
          <%= c.text_area :body, placeholder: "Comment", rows: 5, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= c.submit "Add comment", :class => "btn btn-primary form-control" %>
        </div>
      <% end %>
  </div>
</div>