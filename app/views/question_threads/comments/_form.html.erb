<%= form_for [@answer, @comment], html: {class: "commentForm"} do |c| %>
  <div class="form-group">
    <%= c.text_area :body, placeholder: "Comment", rows: 10, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= c.submit "Add comment", :class => "btn btn-primary form-control" %>
  </div>
<% end %>