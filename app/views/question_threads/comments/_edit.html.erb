<%= form_for [answer, comment], html: {class: "commentForm #{toggleDisplay}"},
             data: { target: "inline-edit.form"}, :remote => true do |c| %>
  <div class="form-group">
    <%= c.text_area :body, data: { behavior: "mentions" }, placeholder: "Comment", rows: 3, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= c.submit "Update Comment", :class => "btn btn-primary form-control" %>
  </div>

  <%= submit_tag 'Close', type: 'button', class: "btn btn-secondary col", data: { action: "click->inline-edit#hideForm"} %>
<% end %>
